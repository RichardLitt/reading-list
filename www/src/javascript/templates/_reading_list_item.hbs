<span class="title">{{ title }} by <ul class='authors'>{{#each author_data}}
  <li>{{name}}</li>
{{/each}}</ul>
</span>

<span>
  <ul class="stars">
    {{#each [0, 1, 2, 3, 4] }}
    <li>
      <i class="fa fa-star-o"></i>
    </li>
    {{/each}}
  </ul>
</span>
<button type="button" class="btn btn-xs <%= read ? '' : 'btn-default' %>" data-toggle="modal" data-target="#markAsReadModal">read</button>
<i class='fa fa-trash remove'></i>
